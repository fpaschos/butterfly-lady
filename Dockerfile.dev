FROM node:20-alpine

# Install pnpm
RUN npm install -g pnpm

WORKDIR /app

# Copy package files
COPY package.json pnpm-workspace.yaml ./

# Install all dependencies (including dev)
RUN pnpm install

# Copy configuration
COPY tsconfig.json ./

# Source code will be mounted as volume
# Start dev server with hot-reload
CMD ["pnpm", "run", "dev"]

